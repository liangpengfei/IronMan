<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fei.peng.liang.ironman.ui.RegisterSuccessActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="恭喜您，注册成功！！"
        android:id="@+id/tv_regist_success"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="现在登录？？"
        android:id="@+id/tv_regist_success_load"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/tv_regist_success"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="用户名/邮箱"
        android:id="@+id/et_regist_load_username"
        android:layout_below="@+id/tv_regist_success_load"
        android:layout_alignLeft="@+id/tv_regist_success"
        android:layout_alignStart="@+id/tv_regist_success"
        android:layout_marginTop="52dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="密码"
        android:id="@+id/et_regist_load_password"
        android:layout_below="@+id/et_regist_load_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/button_regits_load_load"
        android:layout_below="@+id/et_regist_load_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:onClick="sign_in"
        android:background="#ff1a6fff" />
</RelativeLayout>
